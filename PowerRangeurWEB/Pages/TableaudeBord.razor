        <Tableau T="SimpleTacheGet" Data="@userReport.TachesToDo" />
        <h5>Tâches complétées :</h5>
        <Tableau T="SimpleTacheGet" Data="@userReport.TachesComplete" />
    }
}
else
{
    <p>Aucun utilisateur trouvé.</p>
} *@
