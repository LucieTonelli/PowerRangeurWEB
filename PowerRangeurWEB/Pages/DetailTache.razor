@page "/DetailTache/{IdTache:int}"

<h3>Detail Tache</h3>

            <li>ID: @Tache.IdTache</li>
            <li>Nom: @Tache.NomTache</li>
            <li>Statut: @Tache.Statut</li>
            <li>Priorité: @Tache.PrioriteTaches</li>
            <li>Récurrence: @Tache.Recurrence</li>
            <li>Description: @Tache.Description</li>
            <li>Date de Création: @Tache.DateCreation</li>
            <li>Date d'Échéance: @Tache.DateEcheance</li>
    
    @if (Tache.Users != null)
    {

        <p>Des Rangeurs y travaillent :</p>

        <ul>
        @foreach (var user in Tache.Users)
        {
            <li>@user.PseudoUser</li>
        
        }
        </ul>
    }
    else
    {
        <li>Aucun utilisateur n'est assigné</li>

    }
    <button @onclick="() => Assign(Tache)">Trouver un Rangeur</button>
